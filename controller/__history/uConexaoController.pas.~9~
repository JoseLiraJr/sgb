unit uConexaoController;

interface

uses
  System.SysUtils;

type
  TConexaoController = class
   localAplicacao : string;
  public
  constructor Create;
  destructor Destroy; override;
  function createData : Boolean;
  end;

implementation

uses
  uDmPrincipal, FireDAC.Comp.Client;

{ TConexaoController }

constructor TConexaoController.Create;
begin
  inherited Create;
end;

function TConexaoController.createData: Boolean;
var
  query : TFDQuery;

begin
  Result := False;
  query := TFDQuery.Create(nil);
  try
    query.Connection := TdmPrincipal.GetConnection.Connection;

  finally
    query.Free;
  end;
end;

destructor TConexaoController.Destroy;
begin
  inherited Destroy;
end;

end.
